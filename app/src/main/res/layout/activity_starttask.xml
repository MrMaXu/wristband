<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ViewFlipper
        android:id="@+id/vf"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/nav_bac"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/login_bac"/>
    </ViewFlipper>


    <com.john.waveview.WaveView
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        wave:above_wave_color="@android:color/white"
        wave:blow_wave_color="@android:color/darker_gray"
        wave:wave_height="little"
        wave:wave_hz="normal"
        wave:wave_length="middle" />

    <info.abdolahi.CircularMusicProgressBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/album_art"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/login_bac"
        app:border_color="#00796B"
        app:border_width="2dp"
        app:centercircle_diammterer="0.85"
        app:progress_color="#80CBC4"
        app:progress_startAngle="270"
        app:draw_anticlockwise="false" />



    <TextView
        android:id="@+id/count_down_time"
        android:textSize="40dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="460dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/pause"
            android:src="@drawable/pause"
            android:background="@null"
            android:layout_margin="20dp"
            android:scaleType="fitXY"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <ImageButton
            android:id="@+id/quit"
            android:src="@drawable/quit"
            android:background="@null"
            android:layout_margin="20dp"
            android:scaleType="fitXY"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>


</RelativeLayout>
